{
  "name": "null-protocol",
  "version": "0.1.0",
  "description": "Verifiable Digital Closure: The Rights Layer for the Internet",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc && npm run build:contracts",
    "build:contracts": "hardhat compile",
    "compile": "hardhat compile",
    "test": "hardhat test && npm run test:relayer",
    "test:contracts": "hardhat test",
    "test:relayer": "jest --testPathPattern=relayer",
    "test:integration": "jest --testPathPattern=integration",
    "test:coverage": "hardhat coverage && jest --coverage",
    "lint": "eslint . --ext .ts,.js,.sol",
    "lint:fix": "eslint . --ext .ts,.js,.sol --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "relayer:start": "tsx relayer/src/index.ts",
    "relayer:dev": "tsx watch relayer/src/index.ts",
    "relayer:build": "tsc -p relayer/tsconfig.json",
    "hardhat:node": "hardhat node",
    "hardhat:console": "hardhat console",
    "deploy:local": "hardhat run scripts/deploy.ts --network localhost",
    "deploy:testnet": "hardhat run scripts/deploy.ts --network baseSepolia",
    "deploy:mainnet": "hardhat run scripts/deploy.ts --network mainnet",
    "verify": "hardhat verify",
    "clean": "hardhat clean && rm -rf dist/",
    "dev": "concurrently \"npm run hardhat:node\" \"npm run relayer:dev\"",
    "docs:build": "typedoc",
    "docs:serve": "serve docs/_build",
    "security:audit": "npm audit && slither .",
    "security:test": "echidna-test contracts/",
    "precommit": "npm run lint && npm run format:check && npm run type-check",
    "prepush": "npm run test && npm run security:audit"
  },
  "keywords": [
    "blockchain",
    "ethereum",
    "privacy",
    "deletion",
    "verifiable",
    "cryptography",
    "dapp",
    "defi",
    "digital-rights",
    "compliance",
    "gdpr",
    "ccpa"
  ],
  "author": "Null Foundation",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/null-foundation/protocol.git"
  },
  "bugs": {
    "url": "https://github.com/null-foundation/protocol/issues"
  },
  "homepage": "https://null.foundation",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "@ethersproject/abi": "^5.7.0",
    "@ethersproject/abstract-provider": "^5.7.0",
    "@ethersproject/abstract-signer": "^5.7.0",
    "@ethersproject/address": "^5.7.0",
    "@ethersproject/bytes": "^5.7.0",
    "@ethersproject/contracts": "^5.7.0",
    "@ethersproject/hash": "^5.7.0",
    "@ethersproject/keccak256": "^5.7.0",
    "@ethersproject/logger": "^5.7.0",
    "@ethersproject/networks": "^5.7.0",
    "@ethersproject/providers": "^5.7.0",
    "@ethersproject/signing-key": "^5.7.0",
    "@ethersproject/transactions": "^5.7.0",
    "@ethersproject/wallet": "^5.7.0",
    "@noble/ed25519": "^2.0.0",
    "@noble/secp256k1": "^2.0.0",
    "@spruceid/didkit-wasm-node": "^0.4.1",
    "blake3": "^2.1.7",
    "crypto": "^1.0.1",
    "did-resolver": "^4.1.0",
    "ethers": "^6.8.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "node-forge": "^1.3.1",
    "openpgp": "^5.10.1",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.2",
    "@nomicfoundation/hardhat-ethers": "^3.0.4",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.8",
    "@nomicfoundation/hardhat-toolbox": "^3.0.2",
    "@nomicfoundation/hardhat-verify": "^1.1.1",
    "@openzeppelin/hardhat-upgrades": "^1.28.0",
    "@types/chai": "^4.3.11",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.9.0",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "chai": "^4.3.10",
    "concurrently": "^8.2.2",
    "cors": "^2.8.5",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "hardhat": "^2.17.2",
    "hardhat-gas-reporter": "^1.0.9",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "serve": "^14.2.1",
    "solidity-coverage": "^0.8.5",
    "ts-jest": "^29.1.1",
    "tsx": "^4.1.4",
    "typedoc": "^0.25.4",
    "typescript": "^5.2.2"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": ["<rootDir>/tests"],
    "testMatch": ["**/__tests__/**/*.ts", "**/?(*.)+(spec|test).ts"],
    "collectCoverageFrom": [
      "relayer/src/**/*.ts",
      "!relayer/src/**/*.d.ts",
      "!relayer/src/**/*.test.ts"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov", "html"]
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 2,
    "useTabs": false
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "@typescript-eslint/recommended",
      "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": ["@typescript-eslint", "prettier"],
    "rules": {
      "prettier/prettier": "error",
      "@typescript-eslint/no-unused-vars": "error",
      "@typescript-eslint/no-explicit-any": "warn",
      "@typescript-eslint/explicit-function-return-type": "off",
      "@typescript-eslint/explicit-module-boundary-types": "off",
      "@typescript-eslint/no-non-null-assertion": "warn"
    },
    "env": {
      "node": true,
      "es2022": true,
      "jest": true
    }
  }
}
