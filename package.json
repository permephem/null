{
  "name": "null-protocol",
  "version": "0.1.0",
  "description": "Verifiable Digital Closure: The Rights Layer for the Internet",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc && npm run build:contracts",
    "build:contracts": "forge build",
    "compile": "forge build",
    "test": "forge test && npm run test:relayer",
    "test:contracts": "forge test",
    "test:unit": "forge test --match-test test",
    "test:invariant": "forge test --match-contract '.*InvariantTest'",
    "test:fuzz": "forge test --fuzz-runs 10000",
    "test:coverage": "jest --coverage",
    "test:gas": "forge test --gas-report",
    "test:relayer": "jest --testPathPattern=relayer",
    "test:integration": "forge test --match-contract SimpleIntegrationTest",
    "test:integration:jest": "jest --testPathPattern=integration",
    "lint": "eslint . --ext .ts,.js",
    "lint:fix": "eslint . --ext .ts,.js,.sol --fix",
    "format": "prettier --write . && forge fmt",
    "format:check": "prettier --check . && forge fmt --check",
    "type-check": "tsc --noEmit",
    "relayer:start": "tsx relayer/src/index.ts",
    "relayer:dev": "tsx watch relayer/src/index.ts",
    "relayer:build": "tsc -p relayer/tsconfig.json",
    "anvil": "anvil",
    "deploy:local": "forge script script/Deploy.s.sol --rpc-url http://localhost:8545 --private-key 0xac0974bec39a17e36ba4a6b4d238ff944bacb478cbed5efcae784d7bf4f2ff80 --broadcast",
    "deploy:testnet": "forge script script/Deploy.s.sol --rpc-url $BASE_SEPOLIA_RPC_URL --private-key $PRIVATE_KEY --broadcast --verify --etherscan-api-key $BASESCAN_API_KEY",
    "deploy:mainnet": "forge script script/Deploy.s.sol --rpc-url $ETHEREUM_RPC_URL --private-key $PRIVATE_KEY --broadcast --verify --etherscan-api-key $ETHERSCAN_API_KEY",
    "verify": "forge verify-contract",
    "clean": "forge clean && rm -rf dist/",
    "dev": "concurrently \"npm run anvil\" \"npm run relayer:dev\"",
    "docs:build": "typedoc",
    "docs:serve": "serve docs/_build",
    "security:audit": "npm audit --audit-level=high || true",
    "security:slither": "slither src/ --config-file slither.config.json",
    "security:echidna": "echidna echidna/ --config echidna.yaml",
    "precommit": "npm run lint && npm run format:check && npm run type-check && forge fmt --check",
    "prepush": "npm run test && npm run security:audit"
  },
  "keywords": [
    "blockchain",
    "ethereum",
    "privacy",
    "deletion",
    "verifiable",
    "cryptography",
    "dapp",
    "defi",
    "digital-rights",
    "compliance",
    "gdpr",
    "ccpa"
  ],
  "author": "Null Foundation",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/null-foundation/protocol.git"
  },
  "bugs": {
    "url": "https://github.com/null-foundation/protocol/issues"
  },
  "homepage": "https://null.foundation",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "@noble/ed25519": "^2.0.0",
    "@noble/secp256k1": "^2.0.0",
    "@openzeppelin/contracts": "^5.4.0",
    "@spruceid/didkit-wasm-node": "^0.2.1",
    "blake3": "^2.1.7",
    "did-resolver": "^4.1.0",
    "ethers": "^6.8.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "node-forge": "^1.3.1",
    "openpgp": "^5.10.1",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@typechain/ethers-v6": "^0.5.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.9.0",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "concurrently": "^8.2.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "prettier-plugin-solidity": "^2.1.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.1.4",
    "typechain": "^8.3.2",
    "typescript": "^5.2.2"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!(@noble|@spruceid|typechain-types))"
    ],
    "roots": [
      "<rootDir>/tests"
    ],
    "testMatch": [
      "**/__tests__/**/*.ts",
      "**/?(*.)+(spec|test).ts"
    ],
    "collectCoverageFrom": [
      "relayer/src/**/*.ts",
      "!relayer/src/**/*.d.ts",
      "!relayer/src/**/*.test.ts"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 2,
    "useTabs": false
  }
}
