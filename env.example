# Null Protocol Environment Configuration

# Ethereum Configuration
ETHEREUM_RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_KEY
BASE_SEPOLIA_RPC_URL=https://sepolia.base.org
BASE_RPC_URL=https://mainnet.base.org
SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_KEY

# Relayer Configuration
RELAYER_PRIVATE_KEY=your_private_key_here
RELAYER_ADDRESS=0x...
RELAYER_CONTROLLER_SECRET=your_controller_secret_here
RELAYER_CONTROLLER_DID=did:null:your-controller
RELAYER_SIGNING_PRIVATE_KEY=your_signing_private_key_here
RELAYER_SIGNING_KEY_ID=relayer-key-id
RELAYER_SIGNING_ALGORITHM=EdDSA

# Contract Addresses
CANON_REGISTRY_ADDRESS=0x...
MASK_SBT_ADDRESS=0x...

# API Keys
ETHERSCAN_API_KEY=your_etherscan_api_key
BASESCAN_API_KEY=your_basescan_api_key
COINMARKETCAP_API_KEY=your_coinmarketcap_api_key

# Security Settings
SBT_MINTING_ENABLED=false
TRANSFER_ENABLED=false
RATE_LIMIT_ENABLED=true

# Email Configuration
EMAIL_ENABLED=true
DKIM_REQUIRED=true
SPF_REQUIRED=true
DMARC_REQUIRED=true

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Server Configuration
PORT=3000
NODE_ENV=development
ALLOWED_ORIGINS=http://localhost:3000,https://null.foundation

# Database Configuration (if using)
DATABASE_URL=postgresql://user:password@localhost:5432/null_protocol

# Redis Configuration (if using)
REDIS_URL=redis://localhost:6379

# Monitoring
SENTRY_DSN=your_sentry_dsn
PROMETHEUS_ENABLED=false

# External Services
DISCORD_WEBHOOK_URL=your_discord_webhook_url
SLACK_WEBHOOK_URL=your_slack_webhook_url

# Development
REPORT_GAS=true
VERBOSE_LOGGING=false
