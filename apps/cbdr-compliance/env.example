# CBDR Compliance API Environment Configuration

# Server Configuration
PORT=8787
NODE_ENV=development

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=cbdr_compliance
DB_USER=cbdr_app
DB_PASSWORD=your_secure_password

# Redis Configuration (for caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Security Configuration
JWS_SECRET=your-jws-secret-key-change-in-production
API_KEY_REQUIRED=false
API_KEY=your-api-key-for-authentication
RATE_LIMIT_PER_MINUTE=100

# Regulatory Data Sources
REGULATORY_UPDATE_INTERVAL=24
REGULATORY_SOURCES=eu_commission,ico,ftc

# Cache Configuration
CACHE_DEFAULT_TTL=300
CACHE_ADEQUACY_TTL=86400
CACHE_SCC_TTL=3600
CACHE_DEROGATION_TTL=0

# Webhook Configuration
WEBHOOKS_ENABLED=true
WEBHOOK_ENDPOINTS=https://your-webhook-endpoint.com/cbdr
WEBHOOK_RETRY_ATTEMPTS=3

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,https://your-frontend.com

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Monitoring Configuration
METRICS_ENABLED=true
HEALTH_CHECK_INTERVAL=30
